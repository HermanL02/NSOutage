name: Python Application CI/CD

on:
  push:
    branches: [ main ]

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    
    - name: Set up Python 3.8
      uses: actions/setup-python@v2
      with:
        python-version: 3.8

    - name: Log in to Docker Hub
      uses: docker/login-action@v1
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_TOKEN }}

    - name: Build and Push API Docker Image
      run: |
        cd API/
        docker build -t hermanyiqunliang/nsoutageapi:latest .
        docker push hermanyiqunliang/nsoutageapi:latest

    - name: Build and Push Discord Bot Main Docker Image
      run: |
        cd Discord_Bot/
        docker build -f mainDocker -t hermanyiqunliang/nsoutagedc:latest .
        docker push hermanyiqunliang/nsoutagedc:latest

    - name: Build and Push Discord Bot Outage Notification Docker Image
      run: |
        cd Discord_Bot/
        docker build -f outageDocker -t hermanyiqunliang/nsoutagenotification:latest .
        docker push hermanyiqunliang/nsoutagenotification:latest
      env:
        IP_ADDRESS: ${{ secrets.IP_ADDRESS }}
        DISCORD_BOT_TOKEN: ${{ secrets.DISCORD_BOT_TOKEN }}
        MONGO_URI: ${{ secrets.MONGO_URI }}
